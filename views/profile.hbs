<div class="container">
    <div class="tabs">
        <ul class="tab-links">
            <li><a class="active" href="#information-tab">Thông tin tài khoản</a></li>
            <li><a href="#change-password-tab">Đổi mật khẩu</a></li>
            <li><a href="#signout">Đăng xuất</a></li>
        </ul>
    </div>

    <div class="tab-contents">
        <div id="information-tab" class="tab-content active">
            <h1>Thông tin tài khoản</h1>
            <form>
                <label for="name">Người quản lí tài khoản:</label>
                <input type="text" id="name" name="name" value="John Doe">

                <label for="username">Tên đăng nhập:</label>
                <input type="text" id="username" name="username" value="HRWEPAPP01">

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="johndoe@example.com">

                <label for="phone">Số điện thoại:</label>
                <input type="tel" id="phone" name="phone" value="555-555-5555">

                <button type="submit">Lưu thay đổi</button>
            </form>
        </div>

        <div id="change-password-tab" class="tab-content">
            <h1>Đổi mật khẩu</h1>
            <form>
                <label for="current-password">Mật khẩu hiện tại:</label>
                <input type="password" id="current-password" name="current-password">

                <label for="new-password">Mật khẩu mới:</label>
                <input type="password" id="new-password" name="new-password">

                <label for="confirm-password">Nhập lại mật khẩu mới:</label>
                <input type="password" id="confirm-password" name="confirm-password">

                <button type="submit">Lưu thay đổi</button>
            </form>
        </div>
    </div>
</div>