<div class="container">
    <div class="tabs">
        <ul class="tab-links">
            <li><a class="active" href="#information-tab">Thông tin tài khoản</a></li>
            <li><a href="#change-password-tab">Đổi mật khẩu</a></li>
            <li><a href="/signout">Đăng xuất</a></li>
        </ul>
    </div>

    <div class="tab-contents">
        <div id="information-tab" class="tab-content active">
            <h1>Thông tin tài khoản</h1>
            <form>
                <label for="name">Người quản lí tài khoản:</label>
                <input type="text" id="name" name="name" value="{{user.name}}" disabled>

                <label for="username">Tên đăng nhập:</label>
                <input type="text" id="username" name="username" value="{{user.username}}" disabled>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" value="{{user.email}}" disabled>

                <label for="phone">Số điện thoại:</label>
                <input type="tel" id="phone" name="phone" value="{{user.phoneNumber}}" disabled>
            </form>
        </div>

        <div id="change-password-tab" class="tab-content">
            <h1>Đổi mật khẩu</h1>
            <form action="?action=changePassword" method="POST">
                {{#if successMsg}}
                <input type="text" id="successMsg" value="{{successMsg}}" hidden>
                {{/if}}
                {{#if errorMsg}}
                <input type="text" id="errorMsg" value="{{errorMsg}}" hidden>
                {{/if}}
                <label for="currentPassword">Mật khẩu hiện tại:</label>
                <input type="password" id="currentPassword" name="currentPassword">

                <label for="newPassword">Mật khẩu mới:</label>
                <input type="password" id="newPassword" name="newPassword">

                <label for="newConfirmPassword">Nhập lại mật khẩu mới:</label>
                <input type="password" id="newConfirmPassword" name="newConfirmPassword">

                <button type="submit">Lưu thay đổi</button>
            </form>
        </div>
    </div>
</div>